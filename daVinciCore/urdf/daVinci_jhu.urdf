<?xml version="1.0" encoding="utf-8"?>
<robot name="daVinci">

  <!-- /// LINKS ///////////////////////////////////////////// -->
  <!-- /////////////////////////////////////////////////////// -->
  
  <!-- 0: 80/20 table -->
  <link name="mounting_platform">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/slave_frame.dae"/>      
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 1.0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/slave_frame.dae"/>      
      </geometry>
    </collision>
  </link>  

  <!-- 1: PSM base -->
  <link name="mounting_base_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/mounting_base.dae"/>      
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/mounting_base.dae"/>      
      </geometry>
    </collision>
  </link>

  <!-- 2: outer_yaw -->
  <link name="outer_yaw_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0.001 -0.1 -0.1375"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0.001 -0.1 -0.1375"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_yaw.dae"/>      
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.001 -0.1 -0.1375"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_yaw.dae"/>      
      </geometry>
    </collision>
  </link>

  <!-- 3-1: outter_pitch_base -->
  <link name="outer_pitch_base_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="-0.040 -0.130 -0.0901"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="-0.040 -0.130 -0.0901"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_base.dae"/>      
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="-0.040 -0.130 -0.0901"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_base.dae"/>      
      </geometry>
    </collision>
  </link>

  <!-- 3-2: outer_pitch_front -->
  <link name="outer_pitch_front_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 -0.066 -0.010"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 -0.066 -0.010"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_front.dae"/>      
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 -0.066 -0.010"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_front.dae"/>      
      </geometry>
    </collision>
  </link>

  <!-- 3-3: outer_pitch_bottom -->
  <link name="outer_pitch_bottom_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 -0.093 -0.010"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 -0.093 -0.010"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_bottom.dae"/>      
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 -0.093 -0.010"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_bottom.dae"/>      
      </geometry>
    </collision>
  </link>

  <!-- 3-4: outer_pitch_top -->
  <link name="outer_pitch_top_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 -0.093 -0.010"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 -0.093 -0.010"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_top.dae"/>      
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 -0.093 -0.010"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_pitch_top.dae"/>      
      </geometry>
    </collision>
  </link>

  <!-- 3-5: outer_insertion_link -->
  <link name="outer_insertion_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="-0.031 -0.086 -0.070"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="-0.031 -0.086 -0.070"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_insertion.dae"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="-0.031 -0.086 -0.070"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/outer_insertion.dae"/>      
      </geometry>
    </collision>
  </link>

  <!-- 4: tool_adapter_link -->
  <link name="tool_adaptor_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 -0.041 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 -0.041 0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/tool_adaptor.dae"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 -0.041 0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/tool_adaptor.dae"/>
      </geometry>
    </collision>
  </link>

  <!-- 5: tool_link -->
  <link name="tool_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 -0.034 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 -0.034 0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/tool_asm.dae"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 -0.034 0"/>
      <geometry>
        <mesh filename="package://daVinciCore/meshes/tool_asm.dae"/>
      </geometry>
    </collision>
  </link>


  <!-- /// JOINTS///////////////////////////////////////////// -->
  <!-- /////////////////////////////////////////////////////// -->
  
  <!-- joint 0: fixed offset only -->
  <joint name="mounting_base_joint" type="fixed">
    <parent link="mounting_platform"/>
    <child link="mounting_base_link"/>
    <origin rpy="0 0 0" xyz="0.38114 1.03237 1.60767"/>
  </joint>

  <!-- joint 1 -->
  <joint name="outer_yaw_joint" type="revolute">
    <parent link="mounting_base_link"/>
    <child link="outer_yaw_link"/>
    <axis xyz="1 0 0"/>
    <origin rpy="0 0 0" xyz="0.094 0.0525 0.147"/>
    <limit lower="-1.5707" upper="1.5707" velocity=".4" effort="1000"/>
    <dynamics damping="0.1"/>
  </joint> 

  <!-- TODO: should be revolute joint with limits -->
  <!-- joint 2-1: outer_pitch_base_joint -->
  <joint name="outer_pitch_base_joint" type="revolute">
    <parent link="outer_yaw_link"/>
    <child link="outer_pitch_base_link"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0.150 0.085 0.0"/>
    <limit lower="-0.7854" upper="0.7854" velocity=".4" effort="1000"/>
    <dynamics damping="0.1"/>
  </joint>

  <!-- joint 2-2: outer_pitch_front_joint -->
  <joint name="outer_pitch_front_joint" type="fixed">
    <parent link="outer_pitch_base_link"/>
    <child link="outer_pitch_front_link"/>
    <axis xyz="0 1 0"/>
    <!-- <origin rpy="0 0 0" xyz="0.245 0.085 0"/> -->
    <origin rpy="0 0 0" xyz="0.095 0.0 0.0"/>
    <dynamics damping="0.1"/>
  </joint>
  
  <!-- joint 2-3: outer_pitch_botton_joint -->
  <!-- j_2_5 = -j_2_1 -->
  <joint name="outer_pitch_bottom_joint" type="revolute">
    <axis xyz="0 1 0"/>
    <parent link="outer_pitch_base_link"/>
    <child link="outer_pitch_bottom_link"/>
    <origin rpy="0 0 0" xyz="-0.03 -0.040 0.147"/>
    <limit lower="-0.7854" upper="0.7854" velocity=".4" effort="1000"/>
    <dynamics damping="0.1"/>
  </joint>

  <!-- joint 2-4: outer_pitch_top_joint -->
  <joint name="outer_pitch_top_joint" type="fixed">
    <parent link="outer_pitch_bottom_link"/>
    <child link="outer_pitch_top_link"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0.000 0.000 0.038"/>
    <dynamics damping="0.1"/>
  </joint>

  <!-- joint 2-5: outer_insertion_joint -->
  <!-- j_2_5 = j_2_1 -->
  <joint name="outer_insertion_joint" type="revolute">
    <parent link="outer_pitch_bottom_link"/>
    <child link="outer_insertion_link"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0.510 0.003 0"/>
    <limit lower="-0.7854" upper="0.7854" velocity=".4" effort="1000"/>
    <dynamics damping="0.1"/>
  </joint>

  <!-- joint 3: outer_insertion_joint -->
  <joint name="tool_insertion_joint" type="prismatic">
    <parent link="outer_insertion_link"/>
    <child link="tool_adaptor_link"/>
    <axis xyz="0 0 -1"/>
    <!-- <origin rpy="0 0 0" xyz="0.005 -0.048 -0.200"/> -->
    <origin rpy="0 0 0" xyz="0.005 -0.048 -0.100"/>
    <dynamics damping="0.1"/>
    <limit effort="30" velocity="1.0" lower="0.0" upper="0.25"/>
  </joint>


  <!-- joint 4: fixed tool_joint -->
  <joint name="tool_joint" type="fixed">
    <parent link="tool_adaptor_link"/>
    <child link="tool_link"/>
    <origin rpy="0 0 0" xyz="0.010 0 0"/>
  </joint>

</robot>